# Geopolitical Insider Trading Detection - Environment Variables
# Copy this file to .env and fill in the values

# Database - Use PUBLIC URL for local development
# Get this from Railway dashboard -> Postgres -> Variables -> DATABASE_PUBLIC_URL
# Format: postgresql://user:password@host.proxy.rlwy.net:port/database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@autorack.proxy.rlwy.net:12345/railway

# Polymarket API (optional)
POLYMARKET_API_KEY=

# Polygon RPC (for blockchain queries)
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_KEY

# Alert System Configuration
# Set to 'true' to require valid alert credentials (recommended for production)
# Set to 'false' to allow running without alerts (for development/testing only)
# When 'true', system will fail at startup if credentials are missing or invalid
ALERTS_REQUIRED=true

# Telegram Alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email Alerts
EMAIL_FROM=
EMAIL_TO=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Monitoring Settings
MIN_BET_SIZE_USD=10000
POLL_INTERVAL_SECONDS=60
LOG_LEVEL=INFO
